<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controller.GameController">
   <center>
      <GridPane fx:id="gameGrid" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </center>
   <top>
      <HBox prefHeight="50.0" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="timeText" strokeType="OUTSIDE" strokeWidth="0.0" text="Time: 00:00:00">
               <font>
                  <Font size="23.0" />
               </font></Text>
         </children>
      </HBox>
   </top>
</BorderPane>
